{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                    
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src/",                                  
    "baseUrl": "./src/",                                  
    "outDir": "./dist",                                   
    "paths": {
      "@/config/*": ["config/*"],
      "@/puppeteer/*": ["utils/puppeteer/*"],
      "@/utils/*": ["utils/*"],
      "@/interface/*": ["interface/*"],
      "@/constants": ["constants/index"],
      "@/services/*": ["services/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/jobs/*": ["jobs/*"],
    },                                                  
    "esModuleInterop": true,                                   
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                           
    "strictPropertyInitialization": false,                    
    "skipLibCheck": true                                 
  },
  "exclude":[
    "./node_modules"
  ]
}